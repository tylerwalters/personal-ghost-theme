{{!< default}}
{{!< default}}

<header class="site-header site-page-header">
  <div itemscope itemtype="http://schema.org/Person" class="site-head-content inner">
    <h2 itemprop="name" class="blog-title"><a href="{{@blog.url}}" itemprop="url">{{@blog.title}}</a></h2>
    <h2 itemprop="description" class="blog-description">Web Developer, Chilehead, Beer and Wing Enthusiast</h2>
  </div>
</header>

{{navigation}}

<main role="main" class="content">
  {{#author}}
    <section itemprop="author" itemscope="itemscope" itemtype="http://schema.org/Person" class="author pure-g inner">
      <figure class="author-image pure-u-1 pure-u-sm-1-3">
        <img src="//www.gravatar.com/avatar/7ccdffe2c26edec1b53cf7bc66d4bb21?d=404&amp;s=240" alt="{{name}}" itemprop="image"/>
      </figure>

      <div class="author-bio pure-u-1 pure-u-sm-2-3">
        <h1 itemprop="name">{{name}}</h1>

        {{#if bio}}
          <p itemprop="description">{{bio}}</p>
        {{else}}
          <p>Read <a href="{{url}}">more posts</a> by this author.</p>
        {{/if}}
      </div>
    </section>
  {{/author}}

  {{> "loop"}}
</main>