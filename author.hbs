{{!< default}}

{{> "header"}}

{{navigation}}

<main role="main" class="content">
  {{#author}}
    <section itemprop="author" itemscope="itemscope" itemtype="http://schema.org/Person" class="author pure-g inner">
      <figure class="author-image pure-u-1 pure-u-sm-1-3">
        <img src="{{asset "img/photo.jpg"}}" alt="{{name}}" itemprop="image"/>
      </figure>

      <div class="author-bio pure-u-1 pure-u-sm-2-3">
        <h1 itemprop="name">{{name}}</h1>

        {{#if bio}}
          <p itemprop="description">{{bio}}</p>
        {{else}}
          <p>Read <a href="{{url}}">more posts</a> by this author.</p>
        {{/if}}
      </div>
    </section>
  {{/author}}

  {{> "loop"}}
</main>