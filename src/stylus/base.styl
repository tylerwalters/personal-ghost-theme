// base.styl

html
  height 100%
  max-height 100%

body
  height 100%
  max-height 100%
  font-size 100%
  background #f7f5f2
  @media (min-width 56.25em)
    background url(../img/background.jpg) #f7f5f2 no-repeat center center fixed
    background-size cover

html, button, input, select, textarea,
.pure-g [class *= "pure-u"]
  font-family serif-font-stack

body, caption, th, td, input, textarea, select, option, legend, fieldset, h1, h2, h3, h4, h5, h6
  font-size-adjust 0.5

-moz-selection
  color #222
  background #D6EDFF
  text-shadow none

selection
  color #222
  background #D6EDFF
  text-shadow none

h1, h2, h3, .h1, .h2, .h3
  margin .83em 0 .5em
  text-rendering optimizeLegibility
  line-height 1
  font-family sans-font-stack

h1, .h1
  font-size 2em
  line-height 1.25
  color grey
  letter-spacing -1px
  text-indent -2px
  @media (min-width 43.75em)
    font-size 2.5em
    line-height 1.125
  letter-spacing -2px
  text-indent -3px
  @media (min-width 56.25em)
    font-size 3em
    line-height 1.05

h2, .h2
  font-size 1.625em
  line-height 1.15384615
  color grey
  text-indent -2px
  @media (min-width 43.75em)
    font-size 2em
    line-height 1.25
  letter-spacing -1px
  text-indent -2px
  @media (min-width 56.25em)
    font-size 2.25em
    line-height 1.25

h3, .h3
  font-size 1.375em
  line-height 1.13636364
  color grey
  @media (min-width 43.75em)
    font-size 1.5em
    line-height 1.25
  @media (min-width 56.25em)
    font-size 1.75em
    line-height 1.25

a
  color #4ab1ce
  transition color ease 0.2s

a:hover
  color light-blue

h1 a, h2 a, h3 a, .h1 a, .h2 a, .h3 a
  color grey
  text-decoration none

img
  max-width 100%

pre code
  font .8em Consolas, Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace, serif