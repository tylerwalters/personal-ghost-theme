// layout.styl

.container
  font-size 1.15em
  color #555
  line-height 1.6
  background-color off-white
  border 1px solid rgba(0, 0, 0, 0.1)
  border-radius 4px
  overflow-x hidden
  @media (min-width 43.75em)
    font-size 1.25em
    line-height 1.8
  @media (min-width 56.25em)
    margin 2em auto
    max-width 47.75em
    border-radius 2px

.site-header
  padding 1em 0
  background #f7f5f2
  border-bottom 1px solid #fff
  border-radius 4px 4px 0 0
  @media (min-width 43.75em)
    padding-top 2em
  @media (min-width 56.25em)
    padding-top 2em

.site-page-header
  padding 1em 0 .5em
  @media (min-width 43.75em)
    padding-top 1.5em
  @media (min-width 56.25em)
    padding-top 2em

.site-navigation
  margin 0
  border-bottom 1px solid #fff
  background-color #efece6
  @media (min-width 43.75em)
    margin 0
    overflow auto

.content
  margin-top 2em

.site-footer
  font-family sans-font-stack
  padding 1em 0
  background-color #F7F5F2
  border-top 1px solid #fff
  border-radius 0 0 2px 2px
  @media (min-width 43.75em)
    margin-top 2em
    padding 2em 0

.inner, .post
  margin 0 20px
  max-width 700px
  @media (min-width 43.75em)
    margin 0 auto

.post
  margin-bottom 1em