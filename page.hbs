{{!< default}}

{{> "header"}}

{{navigation}}

{{#post}}
  <main role="main" class="content">
    <article class="post-detail {{post_class}}">
      <header class="post-header">
        <h1 class="post-title">{{title}}</h1>

        <span class="post-meta">
          <time datetime="{{date format='YYYY-MM-dd HH:mm:ss Z'}}">{{date format='MMMM DD, YYYY'}}</time>
        </span>
      </header>

      <section class="post-body">
        {{content}}
      </section>
    </article>
  </main>
{{/post}}