{{!< default}}

{{!< default}}

<header class="site-header site-page-header">
  <div itemscope itemtype="http://schema.org/Person" class="site-head-content inner">
    <h2 itemprop="name" class="blog-title"><a href="{{@blog.url}}" itemprop="url">{{@blog.title}}</a></h2>
    <h2 itemprop="description" class="blog-description">Web Developer, Chilehead, Beer and Wing Enthusiast</h2>
  </div>
</header>

{{navigation}}

{{#post}}
  <main role="main" class="content">
    <article class="post-detail {{post_class}}">
      <header class="post-header">
        <h1 class="post-title">{{title}}</h1>

        <span class="post-meta">
          <time datetime="{{date format='YYYY-MM-dd HH:mm:ss Z'}}">{{date format='MMMM DD, YYYY'}}</time>
        </span>
      </header>

      <section class="post-body">
        {{content}}
      </section>
    </article>
  </main>
{{/post}}